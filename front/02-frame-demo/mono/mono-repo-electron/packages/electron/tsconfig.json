{
  "extends": "../../tsconfig",
  "compilerOptions": {
    // "baseUrl": ".",
    "moduleResolution": "nodenext", //模块解析策略。默认使用node的模块解析策略
    "paths": {
      // 路径别名配置
      // "@/*": ["./src/*"],
      // "@common/*": ["../common/src/*"]
      // "@packages/common/*": ["../common/src/*"],
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [
    { "path": "./tsconfig.node.json" } //有时候我们一个大项目里面可能分为几个小项目，他们之间虽然逻辑独立，但是又会存在引用的关系，为了方便独立开发、打包、发布，这时候就需要配置工程引用了 references: []
  ]
}
