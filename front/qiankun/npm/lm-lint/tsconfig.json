{
  "baseUrl": "./",
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./lib",
    "lib": [
      "dom",
      "es2015"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    // "declaration": true,
    // "declarationDir": "./lib/ts",
    // "declarationMap": true  // 生成类型声明映射文件（可选）
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "lib",
    "./prettierrc.js"
  ]
}