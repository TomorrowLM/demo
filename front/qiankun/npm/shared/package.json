{
  "name": "@lm/shared",
  "version": "1.0.0",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/esm/types/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    },
    "./build": {
      "require": "./lib/cjs/config/build/index.js"
    },
    "./utils": {
      "types": "./lib/esm/types/utils/index.d.ts",
      "import": "./lib/esm/utils/index.js",
      "require": "./lib/cjs/utils/index.js"
    },
    "./utils/*": {
      "types": "./lib/esm/types/utils/*",
      "import": "./lib/esm/utils/*",
      "require": "./lib/cjs/utils/*"
    },
    "./assets/*": "./lib/assets/*"
  },
  "sideEffects": false,
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "nvm": "nvm use v18.17.0",
    "clean": "rimraf lib",
