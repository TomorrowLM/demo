{
  "baseUrl": "./",
  // "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./lib/esm",
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./lib/types",
    "declarationMap": false  // 生成类型声明映射文件（可选）
  },
  "include": [
    "**/*",
    "./src/styles/*"
  ],
  "exclude": [
    "lib",
    "zlib"
  ]
}