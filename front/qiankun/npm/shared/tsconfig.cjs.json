{
  "baseUrl": "./",
  // "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./lib/cjs",
    "lib": [
      "dom",
      "es2015"
    ],
    "strict": false, //严格模式，
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vue",
      "node"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/types/*.d.ts"
  ],
  "exclude": [
    "./config", // 具体排除外部 config 文件夹
    "node_modules",
    "**/*.vue",
  ],
}