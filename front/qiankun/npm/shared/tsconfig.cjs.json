{
  "baseUrl": "./",
  // "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./lib/cjs",
    "lib": [
      "dom",
      "es2015"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    // "declaration": true,
    // "declarationDir": "./lib/ts",
    // "declarationMap": true  // 生成类型声明映射文件（可选）
  },
  "include": [
    "**/*",
    "./src/styles/*"
  ],
  "exclude": [

    "./config", // 具体排除外部 config 文件夹
  ]
}