{
  "extends": "@lm/lint/lib/tsLint/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
  },
  // ts 排除的文件
  "exclude": [
    "node_modules",
    "dist"
  ],
  // ts 管理的文件
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.d.ts"
  ]
}